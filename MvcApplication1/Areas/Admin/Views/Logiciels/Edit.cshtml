@model SoftSchool.Models.Logiciels

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table border="0" cellpadding="3" cellspacing="2">
    <tr><td width="100" valign="top" align="right">
        @Html.HiddenFor(model => model.LogicielID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nom)
        </div>
        </td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nom)
            @Html.ValidationMessageFor(model => model.Nom)
        </div>
        </td></tr><tr><td>
        <div class="editor-label" valign="top" align="right">
            @Html.LabelFor(model => model.Version)
        </div>
        </td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.Version)
            @Html.ValidationMessageFor(model => model.Version)
        </div>
        </td></tr><tr><td>
        </td><td>
        
        </td></tr><tr><td valign="top" align="right">
        <div class="editor-label">
            @Html.LabelFor(model => model.Descreption)
        </div>
        </td><td>
        <div class="editor-field">
        <textarea  id="Descreption" name="Descreption" rows="12" cols="130">@Model.Descreption</textarea>
            
            @Html.ValidationMessageFor(model => model.Descreption)
        </div>
        </td></tr><tr><td valign="top" align="right">
        <div class="editor-label">
            @Html.LabelFor(model => model.Prix)
        </div>
        </td><td>
        <div class="editor-field">
            @Html.EditorFor(model => model.Prix)
            @Html.ValidationMessageFor(model => model.Prix)
        </div>
        </td></tr><tr><td>
        </td><td>
        <div class="editor-field">
        <span class="btn btn-success fileinput-button">
                    <i class="icon-plus icon-white"></i>
                    <span>Fichier d'installation</span>
                    <input type="file" class="text-box single-line" id="NLien" name="NLien" />
                    <input type="hidden" value="@Model.Lien" name="Lien" id="Lien" />
                </span>
           
            @Html.ValidationMessageFor(model => model.Lien)
        </div>
        <div class="editor-field">
        <span class="btn btn-success fileinput-button">
                    <i class="icon-plus icon-white"></i>
                    <span>Logo</span>
                    <input type="file" class="text-box single-line" id="NImage" name="NImage" value="@Model.Image"/>
                    <input type="hidden" value="@Model.Image" name="Image" id="Image" />
                </span>
            
            @Html.ValidationMessageFor(model => model.Image)
        </div>
        </td></tr><tr><td>
        </td><td>
        <br />
        <p>
            <button type="submit" class="btn btn-primary start">
                    <i class="icon-upload icon-white"></i>
                    <span>Sauvgarder</span>
                </button>
            <a href="/Admin/Logiciels" class="btn btn-warning cancel">Retour</a>
        </p>
        </td></tr>
        </table>
}

